<style>
  /* Gen Z Header Overrides */
  .header-wrapper {
    background: hsla(0, 0%, 4%, 0.85);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border-bottom: 1px solid hsla(0, 0%, 100%, 0.08);
    transition: all 0.3s ease;
  }
  
  .header-wrapper:hover {
    background: hsla(0, 0%, 4%, 0.95);
  }
  
  header-drawer {
    justify-self: start;
    margin-left: -1.2rem;
  }

  {%- if section.settings.sticky_header_type == 'reduce-logo-size' -%}
    .scrolled-past-header .header__heading-logo-wrapper {
      width: 75%;
    }
  {%- endif -%}

  {%- if section.settings.menu_type_desktop != 'drawer' -%}
    @media screen and (min-width: 990px) {
      header-drawer {
        display: none;
      }
    }
  {%- endif -%}

  .menu-drawer-container {
    display: flex;
  }

  .list-menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .list-menu--inline {
    display: inline-flex;
    flex-wrap: wrap;
  }

  summary.list-menu__item {
    padding-right: 2.7rem;
  }

  .list-menu__item {
    display: flex;
    align-items: center;
    line-height: calc(1 + 0.3 / var(--font-body-scale));
  }

  /* Gen Z Navigation Styling */
  .header__menu-item {
    font-family: 'Bebas Neue', Impact, sans-serif;
    font-size: 1.4rem;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: hsla(0, 0%, 98%, 0.7);
    padding: 0.8rem 1.4rem;
    position: relative;
    transition: all 0.3s ease;
  }
  
  .header__menu-item::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    width: 0;
    height: 2px;
    background: linear-gradient(135deg, hsl(82, 100%, 50%) 0%, hsl(60, 100%, 60%) 100%);
    transition: all 0.3s ease;
    transform: translateX(-50%);
    box-shadow: 0 0 10px hsla(82, 100%, 50%, 0.5);
  }
  
  .header__menu-item:hover {
    color: hsl(0, 0%, 98%);
  }
  
  .header__menu-item:hover::after {
    width: 100%;
  }

  .header__active-menu-item {
    color: hsl(82, 100%, 50%);
  }
  
  .header__active-menu-item::after {
    width: 100%;
  }

  /* Gen Z Logo Glow */
  .header__heading-link {
    transition: all 0.3s ease;
  }
  
  .header__heading-link:hover {
    filter: drop-shadow(0 0 20px hsla(82, 100%, 50%, 0.5));
    transform: scale(1.02);
  }

  /* Gen Z Icon Styling */
  .header__icon {
    color: hsla(0, 0%, 98%, 0.7);
    transition: all 0.3s ease;
  }
  
  .header__icon:hover {
    color: hsl(82, 100%, 50%);
    transform: scale(1.1);
  }
  
  .header__icon:focus-visible {
    outline: 2px solid hsl(82, 100%, 50%);
  }

  /* Gen Z Cart Count */
  .cart-count-bubble {
    background: linear-gradient(135deg, hsl(12, 100%, 64%) 0%, hsl(340, 100%, 65%) 100%);
    color: hsl(0, 0%, 4%);
    font-family: 'Bebas Neue', Impact, sans-serif;
    font-size: 1.1rem;
    font-weight: 600;
    letter-spacing: 0.02em;
    border-radius: 50%;
    min-width: 1.8rem;
    height: 1.8rem;
    animation: bounce-subtle 2s ease-in-out infinite;
  }
  
  @keyframes bounce-subtle {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-3px); }
  }

  /* Gen Z Search Styling */
  .header__search {
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }
  
  .search-modal__form {
    background: hsl(0, 0%, 7%);
    border: 1px solid hsla(0, 0%, 100%, 0.1);
  }
  
  .search-modal__input {
    background: transparent;
    color: hsl(0, 0%, 98%);
    font-family: 'Inter', sans-serif;
  }

  /* Mega Menu Gen Z Style */
  .mega-menu__content {
    background: hsla(0, 0%, 4%, 0.98);
    backdrop-filter: blur(20px);
    border: 1px solid hsla(0, 0%, 100%, 0.08);
    border-top: 2px solid hsl(82, 100%, 50%);
  }
  
  .mega-menu__link {
    color: hsla(0, 0%, 98%, 0.7);
    font-family: 'Inter', sans-serif;
    transition: all 0.2s ease;
  }
  
  .mega-menu__link:hover {
    color: hsl(82, 100%, 50%);
    padding-left: 0.5rem;
  }

  @media screen and (min-width: 750px) {
    .header {
      display: grid;
      grid-template-areas: 'left-icons heading icons';
      grid-template-columns: 1fr 2fr 1fr;
      align-items: center;
    }
  }

  @media screen and (min-width: 990px) {
    .header {
      grid-template-areas: 'heading navigation icons';
    }

    .header--middle-left {
      grid-template-areas: 'heading navigation icons';
      grid-template-columns: auto auto 1fr;
    }

    .header--middle-center {
      grid-template-areas: 'navigation heading icons';
      grid-template-columns: 1fr auto 1fr;
    }

    .header--top-center {
      grid-template-areas:
        'left-icons heading icons'
        'navigation navigation navigation';
      grid-template-columns: 1fr auto 1fr;
    }

    .header--center-split {
      grid-template-areas: 'navigation-left heading navigation-right';
      grid-template-columns: 1fr auto 1fr;
    }
  }
</style>

