<style>
  /* Gen Z Footer Overrides */
  .footer {
    background: linear-gradient(180deg, hsl(0, 0%, 7%) 0%, hsl(0, 0%, 2%) 100%);
    border-top: 1px solid hsla(0, 0%, 100%, 0.08);
    position: relative;
    overflow: hidden;
  }
  
  .footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, 
      hsl(82, 100%, 50%) 0%, 
      hsl(180, 100%, 50%) 50%, 
      hsl(12, 100%, 64%) 100%);
    opacity: 0.6;
  }
  
  /* Gen Z Newsletter Section */
  .footer__newsletter {
    background: linear-gradient(135deg, hsl(82, 100%, 50%) 0%, hsl(60, 100%, 60%) 100%);
    padding: 3rem;
    border-radius: 1rem;
    margin-bottom: 4rem;
    position: relative;
    overflow: hidden;
  }
  
  .footer__newsletter::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle, hsla(0, 0%, 100%, 0.2) 0%, transparent 70%);
    pointer-events: none;
  }
  
  .footer__newsletter h2,
  .footer__newsletter .newsletter__heading {
    font-family: 'Bebas Neue', Impact, sans-serif;
    font-size: clamp(2.4rem, 5vw, 3.6rem);
    color: hsl(0, 0%, 4%);
    text-transform: uppercase;
    letter-spacing: 0.02em;
    margin-bottom: 0.5rem;
  }
  
  .footer__newsletter p {
    color: hsla(0, 0%, 4%, 0.8);
    font-family: 'Inter', sans-serif;
    margin-bottom: 1.5rem;
  }
  
  .newsletter-form__field-wrapper {
    display: flex;
    gap: 1rem;
    max-width: 500px;
  }
  
  .footer__newsletter .field__input {
    flex: 1;
    background: hsl(0, 0%, 4%);
    border: none;
    padding: 1.2rem 1.6rem;
    border-radius: 0.75rem;
    color: hsl(0, 0%, 98%);
    font-family: 'Inter', sans-serif;
    transition: all 0.3s ease;
  }
  
  .footer__newsletter .field__input::placeholder {
    color: hsla(0, 0%, 98%, 0.5);
  }
  
  .footer__newsletter .field__input:focus {
    outline: none;
    box-shadow: 0 0 0 3px hsla(0, 0%, 100%, 0.3);
  }
  
  .footer__newsletter .newsletter-form__button {
    background: hsl(0, 0%, 4%);
    color: hsl(82, 100%, 50%);
    border: none;
    padding: 1.2rem 2rem;
    border-radius: 0.75rem;
    font-family: 'Bebas Neue', Impact, sans-serif;
    font-size: 1.4rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .footer__newsletter .newsletter-form__button:hover {
    background: hsl(0, 0%, 98%);
    color: hsl(0, 0%, 4%);
    transform: translateY(-2px);
  }

  /* Footer Headings */
  .footer-block__heading,
  .footer__title {
    font-family: 'Bebas Neue', Impact, sans-serif;
    font-size: 1.6rem;
    color: hsl(0, 0%, 98%);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 2rem;
  }

  /* Footer Links */
  .footer-block__details-content a,
  .footer__list-item a {
    color: hsla(0, 0%, 98%, 0.6);
    font-family: 'Inter', sans-serif;
    font-size: 1.4rem;
    text-decoration: none;
    transition: all 0.3s ease;
    display: inline-block;
  }
  
  .footer-block__details-content a:hover,
  .footer__list-item a:hover {
    color: hsl(82, 100%, 50%);
    padding-left: 0.5rem;
  }

  /* Social Icons */
  .footer__social-icons,
  .list-social {
    display: flex;
    gap: 1.5rem;
  }
  
  .list-social__link {
    color: hsla(0, 0%, 98%, 0.6);
    transition: all 0.3s ease;
  }
  
  .list-social__link:hover {
    color: hsl(82, 100%, 50%);
    transform: translateY(-3px);
  }
  
  .list-social__link svg {
    width: 2.4rem;
    height: 2.4rem;
  }

  /* Payment Icons */
  .list-payment {
    display: flex;
    gap: 0.8rem;
    flex-wrap: wrap;
    justify-content: flex-end;
  }
  
  .list-payment__item {
    opacity: 0.7;
    transition: opacity 0.3s ease;
  }
  
  .list-payment__item:hover {
    opacity: 1;
  }

  /* Copyright / Bottom Bar */
  .footer__content-bottom {
    border-top: 1px solid hsla(0, 0%, 100%, 0.08);
    padding-top: 3rem;
    margin-top: 3rem;
  }
  
  .copyright,
  .footer__copyright {
    color: hsla(0, 0%, 98%, 0.4);
    font-family: 'Inter', sans-serif;
    font-size: 1.2rem;
    text-align: center;
  }
  
  .copyright a {
    color: hsla(0, 0%, 98%, 0.6);
    transition: color 0.3s ease;
  }
  
  .copyright a:hover {
    color: hsl(82, 100%, 50%);
  }

  /* Country/Language Selector */
  .localization-form__select {
    background: hsla(0, 0%, 100%, 0.05);
    border: 1px solid hsla(0, 0%, 100%, 0.1);
    border-radius: 0.5rem;
    color: hsl(0, 0%, 98%);
    font-family: 'Inter', sans-serif;
    padding: 0.8rem 1rem;
  }
  
  .localization-form__select:hover {
    border-color: hsl(82, 100%, 50%);
  }

  @media screen and (max-width: 749px) {
    .newsletter-form__field-wrapper {
      flex-direction: column;
    }
    
    .footer__newsletter .newsletter-form__button {
      width: 100%;
    }
  }
</style>

{%- style -%}
  .footer {
    padding:
      {{ section.settings.padding_top | times: 0.75 | round: 0 }}px
      {{ section.settings.padding_right | times: 0.75 | round: 0 }}px
      {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px
      {{ section.settings.padding_left | times: 0.75 | round: 0 }}px
    ;
  }

  @media screen and (min-width: 750px) {
    .footer {
      padding:
        {{ section.settings.padding_top }}px
        {{ section.settings.padding_right }}px
        {{ section.settings.padding_bottom }}px
        {{ section.settings.padding_left }}px
      ;
    }
  }
{%- endstyle -%}

<footer class="footer color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  {%- liquid
    assign has_social_icons = true
    if settings.social_facebook_link == blank and settings.social_instagram_link == blank and settings.social_youtube_link == blank and settings.social_tiktok_link == blank and settings.social_twitter_link == blank and settings.social_pinterest_link == blank and settings.social_snapchat_link == blank and settings.social_tumblr_link == blank and settings.social_vimeo_link == blank and settings.social_linkedin_link == blank
      assign has_social_icons = false
    endif

    assign newsletter_block = section.blocks | where: "type", "newsletter" | first
  -%}

  <div class="footer__content-top page-width">
    {%- if newsletter_block != blank -%}
      <div class="footer__newsletter">
        {%- if newsletter_block.settings.heading != blank -%}
          <h2 class="newsletter__heading">{{ newsletter_block.settings.heading }}</h2>
        {%- endif -%}
        {%- if newsletter_block.settings.subheading != blank -%}
          <p>{{ newsletter_block.settings.subheading }}</p>
        {%- endif -%}
        {%- form 'customer', id: 'ContactFooter', class: 'newsletter-form' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="newsletter-form__field-wrapper">
            <div class="field">
              <input
                id="NewsletterForm--{{ section.id }}"
                type="email"
                name="contact[email]"
                class="field__input"
                value="{{ form.email }}"
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                {% if form.errors %}
                  autofocus
                  aria-invalid="true"
                  aria-describedby="ContactFooter-error"
                {% elsif form.posted_successfully? %}
                  aria-describedby="ContactFooter-success"
                {% endif %}
                placeholder="{{ 'newsletter.label' | t }}"
                required
              >
              <label class="visually-hidden" for="NewsletterForm--{{ section.id }}">
                {{ 'newsletter.label' | t }}
              </label>
            </div>
            <button
              type="submit"
              class="newsletter-form__button"
              name="commit"
              id="Subscribe"
              aria-label="{{ 'newsletter.button_label' | t }}"
            >
              {% render 'icon-arrow' %}
              <span class="visually-hidden">{{ 'newsletter.button_label' | t }}</span>
            </button>
          </div>
          {%- if form.errors -%}
            <small class="newsletter-form__message form__message" id="ContactFooter-error">
              {%- render 'icon-error' -%}
              {{- form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email -}}
            </small>
          {%- endif -%}
          {%- if form.posted_successfully? -%}
            <h3
              class="newsletter-form__message newsletter-form__message--success form__message"
              id="ContactFooter-success"
              tabindex="-1"
              autofocus
            >
              {% render 'icon-success' %}
              {{- 'newsletter.success' | t }}
            </h3>
          {%- endif -%}
        {%- endform -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      {%- liquid
        if section.blocks.size == 9
          assign footer_grid_class = 'grid--3-col-tablet'
        elsif section.blocks.size >= 6
          assign footer_grid_class = 'grid--3-col-tablet'
        elsif section.blocks.size >= 4
          assign footer_grid_class = 'grid--4-col-desktop'
        elsif section.blocks.size == 3
          assign footer_grid_class = 'grid--3-col-tablet'
        elsif section.blocks.size == 2
          assign footer_grid_class = 'grid--2-col-tablet'
        endif
      -%}
      <div class="footer__blocks-wrapper grid grid--1-col {{ footer_grid_class }}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'link_list' -%}
              <div class="footer-block grid__item" {{ block.shopify_attributes }}>
                {%- if block.settings.heading != blank -%}
                  <h2 class="footer-block__heading">{{ block.settings.heading }}</h2>
                {%- endif -%}
                {%- if block.settings.menu != blank -%}
                  <ul class="footer-block__details-content list-unstyled">
                    {%- for link in block.settings.menu.links -%}
                      <li>
                        <a
                          href="{{ link.url }}"
                          class="link link--text list-menu__item list-menu__item--link{% if link.active %} list-menu__item--active{% endif %}"
                        >
                          {{ link.title }}
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
              </div>

            {%- when 'brand_information' -%}
              <div class="footer-block grid__item" {{ block.shopify_attributes }}>
                {%- if block.settings.heading != blank -%}
                  <h2 class="footer-block__heading">{{ block.settings.heading }}</h2>
                {%- endif -%}
                {%- if block.settings.brand_logo != blank -%}
                  {%- assign logo_alt = block.settings.brand_logo.alt | default: shop.name | escape -%}
                  {%- assign logo_height = 120 | divided_by: block.settings.brand_logo.aspect_ratio -%}
                  {{
                    block.settings.brand_logo
                    | image_url: width: 240
                    | image_tag:
                      class: 'footer-block__image-wrapper',
                      widths: '120, 240',
                      height: logo_height,
                      width: 120,
                      alt: logo_alt
                  }}
                {%- endif -%}
                <div class="footer-block__details-content rte">
                  {{ block.settings.text }}
                </div>
                {%- if has_social_icons and block.settings.show_social -%}
                  {%- render 'social-icons' -%}
                {%- endif -%}
              </div>

            {%- when 'text' -%}
              <div class="footer-block grid__item" {{ block.shopify_attributes }}>
                {%- if block.settings.heading != blank -%}
                  <h2 class="footer-block__heading">{{ block.settings.heading }}</h2>
                {%- endif -%}
                <div class="footer-block__details-content rte">
                  {{ block.settings.subtext }}
                </div>
              </div>

            {%- when 'image' -%}
              <div class="footer-block grid__item" {{ block.shopify_attributes }}>
                {%- if block.settings.image != blank -%}
                  {%- assign image_alt = block.settings.image.alt | default: shop.name | escape -%}
                  {{
                    block.settings.image
                    | image_url: width: block.settings.image_width
                    | image_tag:
                      class: 'footer-block__image-wrapper',
                      widths: '50, 100, 150, 200, 300, 400',
                      alt: image_alt,
                      style: block.settings.alignment
                  }}
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>

  <div class="footer__content-bottom">
    <div class="footer__content-bottom-wrapper page-width">
      <div class="footer__column footer__localization isolate">
        {%- if section.settings.enable_country_selector and localization.available_countries.size > 1 -%}
          <noscript>
            {%- form 'localization', id: 'FooterCountryFormNoScript', class: 'localization-form' -%}
              <div class="localization-form__select">
                <h2 class="visually-hidden" id="FooterCountryLabelNoScript">
                  {{ 'localization.country_label' | t }}
                </h2>
                <select
                  class="localization-selector link"
                  name="country_code"
                  aria-labelledby="FooterCountryLabelNoScript"
                >
                  {%- for country in localization.available_countries -%}
                    <option
                      value="{{ country.iso_code }}"
                      {%- if country.iso_code == localization.country.iso_code %}
                        selected
                      {% endif %}
                    >
                      {{ country.name }} ({{ country.currency.iso_code }}
                      {{ country.currency.symbol }})
                    </option>
                  {%- endfor -%}
                </select>
                {% render 'icon-caret' %}
              </div>
              <button class="button button--tertiary">{{ 'localization.update_country' | t }}</button>
            {%- endform -%}
          </noscript>

          <localization-form class="no-js-hidden">
            {%- form 'localization', id: 'FooterCountryForm', class: 'localization-form' -%}
              <div>
                <h2 class="visually-hidden" id="FooterCountryLabel">{{ 'localization.country_label' | t }}</h2>
                {%- render 'country-localization', localPosition: 'FooterCountry' -%}
              </div>
            {%- endform -%}
          </localization-form>
        {%- endif -%}

        {%- if section.settings.enable_language_selector and localization.available_languages.size > 1 -%}
          <noscript>
            {%- form 'localization', id: 'FooterLanguageFormNoScript', class: 'localization-form' -%}
              <div class="localization-form__select">
                <h2 class="visually-hidden" id="FooterLanguageLabelNoScript">
                  {{ 'localization.language_label' | t }}
                </h2>
                <select
                  class="localization-selector link"
                  name="locale_code"
                  aria-labelledby="FooterLanguageLabelNoScript"
                >
                  {%- for language in localization.available_languages -%}
                    <option
                      value="{{ language.iso_code }}"
                      lang="{{ language.iso_code }}"
                      {%- if language.iso_code == localization.language.iso_code %}
                        selected
                      {% endif %}
                    >
                      {{ language.endonym_name | capitalize }}
                    </option>
                  {%- endfor -%}
                </select>
                {% render 'icon-caret' %}
              </div>
              <button class="button button--tertiary">{{ 'localization.update_language' | t }}</button>
            {%- endform -%}
          </noscript>

          <localization-form class="no-js-hidden">
            {%- form 'localization', id: 'FooterLanguageForm', class: 'localization-form' -%}
              <div>
                <h2 class="visually-hidden" id="FooterLanguageLabel">{{ 'localization.language_label' | t }}</h2>
                {%- render 'language-localization', localPosition: 'FooterLanguage' -%}
              </div>
            {%- endform -%}
          </localization-form>
        {%- endif -%}
      </div>

      <div class="footer__column footer__column--info">
        <div class="copyright">
          <small class="copyright__content">
            &copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: routes.root_url -}}
            <span> | Built with ðŸ”¥ for Gen Z</span>
          </small>
          {%- if section.settings.show_policy -%}
            <ul class="policies list-unstyled">
              {%- for policy in shop.policies -%}
                {%- if policy != blank -%}
                  <li>
                    <small class="copyright__content"
                      ><a href="{{ policy.url }}">{{ policy.title }}</a></small
                    >
                  </li>
                {%- endif -%}
              {%- endfor -%}
            </ul>
          {%- endif -%}
        </div>
        {%- if section.settings.payment_enable -%}
          <div class="footer__payment">
            <span class="visually-hidden">{{ 'sections.footer.payment' | t }}</span>
            <ul class="list list-payment" role="list">
              {%- for type in shop.enabled_payment_types -%}
                <li class="list-payment__item">
                  {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

